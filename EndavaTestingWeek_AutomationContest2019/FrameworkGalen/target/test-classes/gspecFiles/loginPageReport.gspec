@objects
    lambdaTestingImage            xpath       //div[@class='col-lg-3 col-md-4 col-sm-6 sign-form']/a/img
    welcomeBackMessage            xpath       //h1[@class='title text-center font-weight-light']
    emailField                    xpath       //input[@type='email']
    passwordField                 xpath       //input[@type='password']
    loginField                    xpath       //button
    forgotPassword_noAccount-*    xpath       //div[@class='row mt-2']/div

=LoginPage body section=
    @on desktop,tablet,mobile
        lambdaTestingImage:
            visible
            css margin-left is "73.3px"
            css display is "block"
            css color is "rgba(14, 186, 197, 1)"
            css height is "38px"
            near welcomeBackMessage 24px top, -370 to -210px left
            near emailField 60 to 70px top, -370 to -210px left
            near passwordField 110 to 130px top, -370 to -210px left
            near loginField 160 to 180px top, -370 to -210px left
            below welcomeBackMessage -86 px
            below emailField -141 px
            below passwordField -200 to -180px
            below loginField -260 to -250 px

        welcomeBackMessage:
            visible
            css font-size is "20px"
            css letter-spacing is "1.3px"
            css color is "rgba(0, 0, 0, 1)"
            css font-weight is "300"
            css text-align is "center"
            near loginField 120 to 130px top
            above lambdaTestingImage -86px

        emailField:
            visible
            css font-size is "14.4px"
            css margin-top is "16px"
            css height is "39.5938px"
            css padding is "8px 16px"
            css color is "rgba(73, 80, 87, 1)"
            above welcomeBackMessage -80 to -70px
            above lambdaTestingImage -150 to -140px

        passwordField:
            visible
            css font-size is "14.4px"
            css margin-top is "16px"
            css height is "39.5938px"
            css padding is "8px 16px"
            css color is "rgba(73, 80, 87, 1)"
            above emailField -100 to -90px
            above welcomeBackMessage -140 to -130px
            above lambdaTestingImage -200 to -190px

        loginField:
            visible
            css color is "rgba(255, 255, 255, 1)"
            css background-color is "rgba(14, 186, 197, 1)"
            css border-color is "rgb(14, 186, 197)"
            css font-weight is "400"
            css text-align is "center"
            above passwordField -100 to -90px
            above emailField -160 to -150px
            above welcomeBackMessage -200 to -190px
            above lambdaTestingImage -260 to -250px

        @forEach [forgotPassword_noAccount-*] as itemName, next as nextItem
                ${itemName}:
                    right-of ${nextItem} -550 to -250px
                    height 10 to 50px
                    width 100 to 300px
                    count any forgotPassword_noAccount-* is < 3
                    below loginField 43px
                    near emailField -300 to -110px top, -300 to -110px left
                    near passwordField -190px top, -200 to -110px left
                    aligned horizontally all ${nextItem}
                    css box-sizing is "border-box"
                    css line-height is "19.2px"

