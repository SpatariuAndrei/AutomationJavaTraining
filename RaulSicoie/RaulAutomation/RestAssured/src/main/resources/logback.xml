<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} | %-5p | %logger{5}:%L - %msg%n</pattern>
        </encoder>

    </appender>

    <logger name="main" level="TRACE"/>
    <logger name ="org.openqa.selenium" leve="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>